<h1><%= @user.username %>'s Shouts</h1>

<% if current_user.following?(@user) %>
<%= button_to "Unfollow", follow_user_path(@user), method: :delete %>
<% else %>
<%= button_to "Follow", follow_user_path(@user) %>
<% end %>

<p>Following: <%= render @user.followed_users %></p>
<p>Followers: <%= render @user.followers %></p>

<%= render @shouts %>
